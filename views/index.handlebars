
    {{#if siteOptions}}
      <ul class="newsView">
      {{#each siteOptions}}
        <li>
          <h3 class="newsTitle"><a href="news-site/{{this._id}}">{{this.baseUrl}}</a></h3>
          <p>{{this.introText}}</p>
        </li>
      {{/each}}
      </ul>
    {{/if}}
    
    <h2>Create a New Site</h2>
    <p>Add a new source to get news from. Advanced users only.</p>
    <form method="POST" action="create/site">
      Site Name: <br>
       <input type="text" name="shortName" size="30"><br>
      Site Description: <br>
       <input type="text" name="introText" size="30"><br>
      Root URL for site: <br>
       <input type="text" name="baseUrl" size="30">*<br>
      URL to scrape for articles: <br>
       <input type="text" name="urlToScrape" size="30">*<br>
      Parent selector for repeating articles: <br>
       <input type="text" name="baseSelector" size="30">*<br>
      Child selector for image: <br>
       <input type="text" name="imageSelector" size="30"><br>
      Child selector for title of article: <br>
       <input type="text" name="titleSelector" size="30"><br>
      Child selector for link to article: <br>
      <input type="text" name="linkSelector" size="30"><br>
        <input type="submit" value="submit">
    </form>
  