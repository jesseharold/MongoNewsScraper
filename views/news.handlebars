
    <h2>{{shortName}}</h2>
    <p>{{introText}}</p>
    <a href="/" class="breadcrumb">Back Home &gt;&gt;</a>
    {{#if articles}}
      <ul class="newsView">
      {{#each articles}}
        <li>
        {{#if this.image}}
          <img class="featureImage" src="{{this.image}}" >
        {{/if}}
        <h3 class="newsTitle">{{this.title}}</h3>
        <a class="externalLink" href="{{this.link}}" target="_blank">{{this.link}}</a><br>
        <div class="commentsBlock">
          <div class="addComment">
            <h4>Comment on this</h4>
            <form class="commentForm" action="/create/comment">
              <input type="hidden" value="anon" name="author" />
              <input type="hidden" value="{{this._id}}" name="articleId" />
              <input type="hidden" value="{{site._id}}" name="siteId" />
              <input type="text" size="50" name="commentText" />
              <input type="submit" value="Submit">
            </form>
          </div>
          {{#if this.comments}}
            <div class="seeComments">View (NUM) comments
              {{#each this.comments}}
                {{this.text}}<br>
                posted by {{this.author}} at {{this.timestamp}}
              {{/each}}
            </div>
          {{/if}}
        </div>
        <br clear="both">
        </li>
      {{/each}}
      </ul>
    {{/if}}
  